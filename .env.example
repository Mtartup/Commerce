# Core
ADS_DB_PATH=./data/ads.sqlite3

# Date boundaries for daily rollups (KST by default)
ADS_TIMEZONE=Asia/Seoul

# Web (Mini control plane)
ADS_WEB_HOST=127.0.0.1
ADS_WEB_PORT=8010

# Telegram (runtime UI)
TELEGRAM_BOT_TOKEN=
# Optional: if blank, the bot will auto-lock to the first chat that messages it
TELEGRAM_ALLOWED_CHAT_ID=

# Optional: enable demo connector (generates fake data)
ADS_DEMO_MODE=0

# Execution safety
# manual: never execute automatically (only create proposals)
# auto_low_risk: execute proposals with risk=low and requires_approval=0
ADS_EXECUTION_MODE=manual

# Naver SearchAd (fill when implementing the connector)
NAVER_SEARCHAD_BASE_URL=https://api.searchad.naver.com
NAVER_SEARCHAD_API_KEY=
NAVER_SEARCHAD_SECRET_KEY=
NAVER_SEARCHAD_CUSTOMER_ID=

# Meta Ads (fill when implementing the connector)
META_GRAPH_BASE_URL=https://graph.facebook.com
# Optional: Graph API version. Keep this updated when you hit deprecation errors.
META_GRAPH_API_VERSION=v21.0
# Optional hardening (HMAC proof). Not required for the MVP.
META_APP_SECRET=
META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=

# Google Ads (fill when implementing the connector)
GOOGLE_ADS_DEVELOPER_TOKEN=
# Target account to query (digits only; remove hyphens)
GOOGLE_ADS_CUSTOMER_ID=
# Optional: set only if you access a client account via an MCC/manager account
GOOGLE_ADS_LOGIN_CUSTOMER_ID=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=

# TikTok Ads (fill when implementing the connector)
TIKTOK_ACCESS_TOKEN=
TIKTOK_ADVERTISER_ID=

# Coupang (Open API is for commerce; Ads API availability may be limited)
COUPANG_ACCESS_KEY=
COUPANG_SECRET_KEY=
COUPANG_VENDOR_ID=

# Naver Smart Store (Commerce API)
SMARTSTORE_CLIENT_ID=
SMARTSTORE_CLIENT_SECRET=

# Cafe24 Analytics (requires partner approval)
CAFE24_ANALYTICS_CLIENT_ID=
CAFE24_ANALYTICS_CLIENT_SECRET=
CAFE24_ANALYTICS_MALL_ID=
